<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/sinup"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:autofillHints="Nhập Email/Sdt"
    android:background="@drawable/bgr"
    tools:context=".signUp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bgr"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp">
        <Button
            android:id="@+id/btnBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Quay lại"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:layout_above="@id/CardView"
        android:padding="20dp"
        android:orientation="vertical">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/kitty" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Đăng ký"
            android:textSize="50dp"
            android:textColor="#8B0A50">

        </TextView>
    </LinearLayout>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        app:cardCornerRadius="50dp"
        android:layout_marginBottom="-20dp"
        android:id="@+id/CardView">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Họ và tên"
                android:alpha="0.8"
                android:textStyle="bold"
                android:textSize="20sp"/>

            <EditText
                android:id="@+id/edthovaten"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:minHeight="48dp"
                android:hint="Vui lòng nhập họ và tên">

            </EditText>


            <View
                android:layout_width="match_parent"
                android:layout_height="20dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nhập SĐT"
                android:alpha="0.7"
                android:textStyle="bold"
                android:textSize="20sp"/>

            <EditText
                android:id="@+id/ediSDT"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPhonetic"
                android:minHeight="48dp"
                android:hint="09xxxxxxxx">

            </EditText>
            <View
                android:layout_width="match_parent"
                android:layout_height="20dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nhập mật khẩu"
                android:alpha="0.7"
                android:textStyle="bold"
                android:textSize="20sp"/>
            <EditText
                android:id="@+id/edtPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableEnd="@drawable/password_icon"
                android:inputType="textPassword"
                android:minHeight="48dp"
                android:hint="***">

            </EditText>
            <View
                android:layout_width="wrap_content"
                android:layout_height="20dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nhập lại mật khẩu"
                android:alpha="0.7"
                android:textStyle="bold"
                android:textSize="20sp"/>
            <EditText
                android:id="@+id/edtRePassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableEnd="@drawable/password_icon"
                android:inputType="textPassword"
                android:minHeight="48dp"
                android:hint="***">

            </EditText>


            <View
                android:layout_width="wrap_content"
                android:layout_height="8dp"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnTrySignUp"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="Đăng ký"
                android:textSize="19dp"
                app:cornerRadius="32dp">

            </com.google.android.material.button.MaterialButton>

            <View
                android:layout_width="wrap_content"
                android:layout_height="8dp"></View>
        </LinearLayout>
    </androidx.cardview.widget.CardView>


</RelativeLayout>