<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Tiêu đề thông báo -->
    <TextView
        android:id="@+id/tvThongBao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Thông báo"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal"
        android:paddingBottom="16dp"/>

    <!-- Nút gửi tin nhắn -->
    <Button
        android:id="@+id/btnGuiTinNhan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gửi tin nhắn cho chúng tôi"
        android:layout_gravity="center_horizontal"
        android:padding="10dp"
        android:layout_marginBottom="16dp"/>

    <!-- Container cho các thông báo dạng thẻ -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Thông báo 1 -->
        <TextView
            android:id="@+id/tvThongBao1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mặt hàng... đã được giao đến bạn thành công"
            android:textSize="16sp"
            android:padding="10dp"
            android:background="@drawable/rounded_background"
            android:layout_marginBottom="8dp"
            android:textColor="@color/black"/>

        <!-- Thông báo 2 -->
        <TextView
            android:id="@+id/tvThongBao2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mặt hàng... đang được giao đến bạn, hãy chờ chúng tôi một chút..."
            android:textSize="16sp"
            android:padding="10dp"
            android:background="@drawable/rounded_background"
            android:layout_marginBottom="8dp"
            android:textColor="@color/black"/>

        <!-- Thông báo 3 -->
        <TextView
            android:id="@+id/tvThongBao3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Bạn đã đặt hàng thành công"
            android:textSize="16sp"
            android:padding="10dp"
            android:background="@drawable/rounded_background"
            android:layout_marginBottom="8dp"
            android:textColor="@color/black"/>

    </LinearLayout>

</LinearLayout>